<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_group_form" model="ir.ui.view">
        <field name="name">account.group.form</field>
        <field name="model">account.group</field>
        <field name="inherit_id" ref="account.view_account_group_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Accounts">
                        <field name="account_ids" widget="one2many_list" nolabel="1"
                            options="{'no_create': True, 'no_edit': True, 'no_delete': True, 'no_open': True}"/>
                    </page>
                </notebook>                                  
            </xpath>
        </field>
    </record>
    
    <record id="action_account_group_tree" model="ir.actions.act_window">
        <field name="name">Account Groups</field>
        <field name="res_model">account.group</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="account.view_account_group_search"/>
    </record>

    <menuitem id="account_group_menu"
        action="action_account_group_tree"
        sequence="50"
        parent="account.account_account_menu"/>

</odoo>
