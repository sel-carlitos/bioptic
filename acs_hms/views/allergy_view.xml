<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <record id="view_acs_medical_allergy_list" model="ir.ui.view">
        <field name="name">acs.medical.allergy.list</field>
        <field name="model">acs.medical.allergy</field>
        <field name="arch" type="xml">
            <list string="Allergies">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_acs_medical_allergy_form" model="ir.ui.view">
        <field name="name">acs.medical.allergy.form</field>
        <field name="model">acs.medical.allergy</field>
        <field name="arch" type="xml">
            <form string="Allergy">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Dust Mites"/>
                        </h1>
                    </div>
                    <separator string="Description"/>
                    <field name="description"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_acs_medical_allergy_search" model="ir.ui.view">
        <field name="name">acs.medical.allergy.search</field>
        <field name="model">acs.medical.allergy</field>
        <field name="arch" type="xml">
            <search string="Allergy">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_acs_medical_allergy" model="ir.actions.act_window">
        <field name="name">Allergies</field>
        <field name="path">almightyhms-allergy</field>
        <field name="res_model">acs.medical.allergy</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Allergy
            </p>
        </field>
    </record>

</odoo>