<odoo>

    <record id="view_hms_document_list" model="ir.ui.view">
        <field name="name">acs.document.type.list</field>
        <field name="model">acs.document.type</field>
        <field name="arch" type="xml">
            <list string="Document">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_hms_document_form" model="ir.ui.view">
        <field name="name">acs.document.type.form</field>
        <field name="model">acs.document.type</field>
        <field name="arch" type="xml">
            <form string="Document">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Document Name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Document Name"/>
                        </h1>
                    </div>
                    <separator string="Description"/>
                    <field name="description"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hms_document_search" model="ir.ui.view">
        <field name="name">acs.document.type.search</field>
        <field name="model">acs.document.type</field>
        <field name="arch" type="xml">
            <search string="Document">
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <record id="act_acs_document" model="ir.actions.act_window">
        <field name="name">Document Type</field>
        <field name="res_model">acs.document.type</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>