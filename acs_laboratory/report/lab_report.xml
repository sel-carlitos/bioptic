<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="patient_information_template" inherit_id="acs_hms_base.patient_information_template">
        <xpath expr="//tr[@name='patient_address_tr']" position="after">
            <tr name="patient_lab_data" t-if="lab">
                <td name="date_div_td" t-if="lab.date">
                    <strong class="ms-2">Date:</strong> <span t-field="lab.date"/>
                </td>
                <td name="collection_center_td" t-if="lab.collection_center_id">
                    <strong>Collection Center:</strong> <span t-field="lab.collection_center_id"/>
                </td>
            </tr>
            <tr name="patient_lab_data_2" t-if="lab">
                <td name="physician_div_td" t-if="lab.physician_id">
                    <strong class="ms-2">Prescribing Doctor:</strong> <span t-field="lab.physician_id.name"/>
                </td>
                <td name="origin_div_id">
                </td>
            </tr>
        </xpath>
    </template>
    
    <template id="report_lab_result_table_line">
        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else ''">
            <t t-if="not line.display_type">
                <td t-attf-class="text-#{line.result_type} #{'text-danger' if line.result_type in ['high','low'] else ''}">
                    <span class="ms-2" t-field="line.name"/>
                </td>
                <td t-attf-class="text-#{line.result_type} #{'text-danger' if line.result_type in ['high','low'] else ''}">
                    <span class="ms-2" t-field="line.result"/>
                </td>
                <td t-attf-class="text-#{line.result_type} #{'text-danger' if line.result_type in ['high','low'] else ''}">
                    <span class="ms-2" t-field="line.normal_range"/>
                    <span t-if="line.lab_uom_id" t-field="line.lab_uom_id"/>
                </td>
                <td t-attf-class="text-#{line.result_type} #{'text-danger' if line.result_type in ['high','low'] else ''}">
                    <span class="ms-2" t-field="line.remark"/>
                </td>
            </t>
            <t t-if="line.display_type == 'line_section'">
                <td colspan="99">
                    <span class="ms-2" t-field="line.name"/>
                </td>
            </t>
        </tr>
    </template>
    
    <template id="report_lab_result_table">
        <table class="table table-sm o_main_table mt16">
            <thead>
                <tr>
                    <th>Test Name</th>
                    <th>Result</th>
                    <th>Normal Range</th>
                    <th>Remark</th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="lab_test.critearea_ids" t-as="line">
                    <t t-call="acs_laboratory.report_lab_result_table_line">
                        <t t-set="line" t-value="line"/>
                    </t>
                </t>
                <t t-if="lab_test.child_test_ids.critearea_ids" t-foreach="lab_test.child_test_ids.critearea_ids" t-as="line">
                    <t t-call="acs_laboratory.report_lab_result_table_line">
                        <t t-set="line" t-value="line"/>
                    </t>
                </t>
            </tbody>
        </table>
    </template>

    <template id="report_acs_lab_test_document_details">
        <h2 class="text-center">Investigation: <span t-field="doc.name"/></h2>

        <t t-call="acs_hms_base.patient_information_template">
            <t t-set="patient" t-value="doc.patient_id"/>
            <t t-set="lab" t-value="doc"/>
            <t t-set="lab" t-value="doc.request_id"/>
        </t>

        <t t-if="doc.critearea_ids" t-call="acs_laboratory.report_lab_result_table">
            <t t-set="lab_test" t-value="doc"/>
        </t>
        <p class="mt32" t-if="doc.diagnosis">
            <b>Diagnosis:</b><br/>
            <span t-esc="doc.diagnosis"/>
        </p>
        <p class="mt32" t-if="doc.note">
            <b>Comment:</b><br/>
            <span t-esc="doc.note"/>
        </p>
        <div class="mt16 row" name="sign_and_code">
            <div class="col-6" name="signature">
                <t t-if="doc.lab_physician_id and doc.lab_physician_id.signature">
                    <b>Doctorâ€™s Stamp/Signature</b>
                    <br/>
                    <img t-att-src="image_data_uri(doc.lab_physician_id.signature)" alt="Sign" style="max-height: 100px !important;"/>
                </t>
            </div>
            <div class="col-6" name="qrcode">
                <div class="pull-right" t-if="doc.sudo().company_id.acs_labresult_qrcode">
                    <img t-if="doc.qr_image" t-att-src="image_data_uri(doc.qr_image)" alt="LAB Result QR" style="width: 100px;height: 100px" class="float-end"/>
                </div>
            </div>
        </div>
        <p t-if="doc.disclaimer" class="mt64">
            <b>Disclaimer: </b>
            <span t-field="doc.disclaimer"/>
        </p>
    </template>

    <template id="report_acs_lab_test_document">
        <!-- Just for Portal Isuse -->
        <t t-set="doc" t-value="doc.sudo()"/>
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.patient_id.lang})"/>
            <div class="page">
                <!-- Manage details in template so combined repotr can be printed in same page easily. -->
                <t t-call="acs_laboratory.report_acs_lab_test_document_details"/>
            </div>
        </t>
    </template>

    <template id="report_acs_lab_test">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="acs_laboratory.report_acs_lab_test_document" t-lang="doc.sudo().patient_id.partner_id.lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_acs_lab_test" model="ir.actions.report">
        <field name="name">Lab Report</field>
        <field name="model">patient.laboratory.test</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_laboratory.report_acs_lab_test</field>
        <field name="report_file">acs_laboratory.report_acs_lab_test</field>
        <field name="print_report_name">(object.name or 'LabReport').replace('/','_') + '_LabReport'</field>
        <field name="binding_model_id" ref="model_patient_laboratory_test"/>
        <field name="binding_type">report</field>
    </record>

</odoo>