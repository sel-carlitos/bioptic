<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_acs_lab_result">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="req_doc">
                <t t-foreach="req_doc.patient_test_ids" t-as="doc">
                    <t t-call="acs_laboratory.report_acs_lab_test_document" t-lang="doc.sudo().patient_id.partner_id.lang"/>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_acs_lab_results" model="ir.actions.report">
        <field name="name">Lab Results</field>
        <field name="model">acs.laboratory.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_laboratory.report_acs_lab_result</field>
        <field name="report_file">acs_laboratory.report_acs_lab_result</field>
        <field name="print_report_name">(object._acs_get_report_base_filename())</field>
        <field name="binding_model_id" ref="model_acs_laboratory_request"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Combined results Reoprt -->
    <template id="report_acs_lab_result_combined_document">
        <t t-call="web.external_layout">
            <div class="page">
                <t t-foreach="doc.patient_test_ids" t-as="doc">
                    <t t-call="acs_laboratory.report_acs_lab_test_document_details"/>
                </t>
            </div>
        </t>
    </template>

    <template id="report_acs_lab_result_combined">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="acs_laboratory.report_acs_lab_result_combined_document" t-lang="doc.sudo().patient_id.partner_id.lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_acs_lab_results_combined" model="ir.actions.report">
        <field name="name">Lab Results (Combined)</field>
        <field name="model">acs.laboratory.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_laboratory.report_acs_lab_result_combined</field>
        <field name="report_file">acs_laboratory.report_acs_lab_result_combined</field>
        <field name="print_report_name">(object._acs_get_report_base_filename())</field>
        <field name="binding_model_id" ref="model_acs_laboratory_request"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_acs_lab_test_result_category_document">
        <t t-call="web.external_layout">
            <div class="page">
                <h2 class="text-center">Investigation: <span t-field="doc.name"/></h2>
                <t t-call="acs_hms_base.patient_information_template">
                    <t t-set="patient" t-value="doc.patient_id"/>
                    <t t-set="lab" t-value="doc"/>
                </t>

                <t t-set="grouped_tests" t-value="doc.acs_get_test_results_grouped_by_category()"/>
                 <table class="table table-sm o_main_table mt16">
                    <thead>
                        <tr>
                            <th>Test Name</th>
                            <th>Result</th>
                            <th>Normal Range</th>
                            <th>Remark</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="grouped_tests.items()" t-as="item">
                            <t t-set="category" t-value="item[0]"/>
                            <t t-set="tests" t-value="item[1]"/>
                            <tr class="bg-light">
                                <td colspan="4">
                                    <center>
                                        <strong>
                                            <u>
                                                <t t-if="category != 'other'">
                                                    <t t-esc="category"/>
                                                </t>
                                            </u>
                                        </strong>
                                    </center>
                                </td>
                            </tr>

                            <t t-foreach="tests" t-as="lab_test">
                                <tr class="font-italic o_line_note">
                                    <td colspan="4">
                                        <span class="ms-2" t-field="lab_test.test_id"/> By 
                                        <span t-field="lab_test.user_id"/> on 
                                        <span t-field="lab_test.date_analysis"/>
                                    </td>
                                </tr>
                                <t t-foreach="lab_test.critearea_ids" t-as="line">
                                    <t t-call="acs_laboratory.report_lab_result_table_line">
                                        <t t-set="line" t-value="line"/>
                                    </t>
                                </t>
                                <t t-foreach="lab_test.child_test_ids" t-as="child_test">
                                    <t t-foreach="child_test.critearea_ids" t-as="line">
                                        <t t-call="acs_laboratory.report_lab_result_table_line">
                                            <t t-set="line" t-value="line"/>
                                        </t>
                                    </t>
                                </t>
                            </t>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="report_acs_lab_test_result_category">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="acs_laboratory.report_acs_lab_test_result_category_document" t-lang="doc.sudo().patient_id.partner_id.lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_acs_lab_test_result_category" model="ir.actions.report">
        <field name="name">Lab Results (Category)</field>
        <field name="model">acs.laboratory.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_laboratory.report_acs_lab_test_result_category</field>
        <field name="report_file">acs_laboratory.report_acs_lab_test_result_category</field>
        <field name="print_report_name">(object._acs_get_report_base_filename())</field>
        <field name="binding_model_id" ref="model_acs_laboratory_request"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Combined results - Single table Reoprt -->
    <template id="report_acs_lab_result_combined_single_table_document">
        <t t-call="web.external_layout">
            <div class="page">
                <h2 class="text-center">Investigation: <span t-field="doc.name"/></h2>
                <t t-call="acs_hms_base.patient_information_template">
                    <t t-set="patient" t-value="doc.patient_id"/>
                    <t t-set="lab" t-value="doc"/>
                </t>

                <table class="table table-sm o_main_table mt16">
                    <thead>
                        <tr>
                            <th>Test Name</th>
                            <th>Result</th>
                            <th>Normal Range</th>
                            <th>Remark</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.patient_test_ids" t-as="lab_test">
                            <tr class="font-italic o_line_note">
                            <!-- <tr class="bg-200 font-weight-bold o_line_section"> -->
                                <td colspan="99">
                                    <span class="ms-2" t-field="lab_test.test_id"/> By <span t-field="lab_test.user_id"/> on <span t-field="lab_test.date_analysis"/>
                                </td>
                            </tr>

                            <t t-foreach="lab_test.critearea_ids" t-as="line">
                                <t t-call="acs_laboratory.report_lab_result_table_line">
                                    <t t-set="line" t-value="line"/>
                                </t>
                            </t>
                        </t>
                    </tbody>
                </table>

            </div>
        </t>
    </template>

    <template id="report_acs_lab_result_combined_single_table">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="acs_laboratory.report_acs_lab_result_combined_single_table_document" t-lang="doc.sudo().patient_id.partner_id.lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_acs_lab_results_combined_single_table" model="ir.actions.report">
        <field name="name">Lab Results (Combined- Single Table)</field>
        <field name="model">acs.laboratory.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_laboratory.report_acs_lab_result_combined_single_table</field>
        <field name="report_file">acs_laboratory.report_acs_lab_result_combined_single_table</field>
        <field name="print_report_name">(object._acs_get_report_base_filename())</field>
        <field name="binding_model_id" ref="model_acs_laboratory_request"/>
        <field name="binding_type">report</field>
    </record>

</odoo>