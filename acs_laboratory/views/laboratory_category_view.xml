<?xml version="1.0"?>
<odoo>

    <!-- Test Category Views -->
    <record id="acs_laboratory_test_category_list" model="ir.ui.view">
        <field name="name">acs.laboratory.test.category.list</field>
        <field name="model">acs.laboratory.test.category</field>
        <field name="arch" type="xml">
            <list string="Test Category">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
            </list>
        </field>
    </record>

    <record id="acs_laboratory_test_category_form" model="ir.ui.view">
        <field name="name">acs.laboratory.test.category.form</field>
        <field name="model">acs.laboratory.test.category</field>
        <field name="arch" type="xml">
            <form string="Test Category">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Test Category"/>
                        </h1>
                    </div>
                    <group>
                        <field name="sequence"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_acs_laboratory_test_category" model="ir.actions.act_window">
        <field name="name">Test Categories</field>
        <field name="path">almighty-lab-test-category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">acs.laboratory.test.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Test Categories.
            </p>
        </field>
    </record>

</odoo>