<?xml version="1.0"?>
<odoo>

    <record id="view_lab_comparison_result_form" model="ir.ui.view">
        <field name="name">lab.comparison.result.form</field>
        <field name="model">lab.comparison.result</field>
        <field name="arch" type="xml">
            <form string="Lab Comparison Result">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="test_id"/>
                        <field name="test_result_ids" widget='many2many_tags' domain="[('patient_id','=',patient_id),('test_id', '=', test_id)]"/>
                    </group>
                    <label for="comparison_results"/>
                    <field name="comparison_results" widget="html"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_lab_result_compare" model="ir.actions.act_window">
        <field name="name">Compare Result</field>
        <field name="path">almighty-lab-compare-result</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lab.comparison.result</field>
        <field name="view_mode">form</field>
    </record>

</odoo>
