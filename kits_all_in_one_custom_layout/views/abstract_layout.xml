<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="abstract_layout">
        <t t-set="header_background_url"
            t-value="'data:image/png;base64,%s' % company.header_background_image.decode('utf-8') if company.header_background_image else '/kits_all_in_one_custom_layout/static/header_images/abstract.jpg'" />
        <div t-attf-class="header o_company_#{company.id}_layout o_abstract_header" t-attf-style="background-size: 100% 100%;{{ 'background-image: url(%s);' % header_background_url if header_background_url else '' }}">
            <div>
                <table id="abstract-header" style="width: 100%; border-collapse: collapse;">
                    <tr>
                        <td style="width: 40%; vertical-align: middle; text-align: center;">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo" style="max-height: 100px;"/>
                        </td>
                        <td style="width: 60%;vertical-align: middle;text-align: end;padding: 50px 10px 50px 0px;">
                            <h3 style="margin: 0;" t-field="company.name"></h3>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_abstract o_company_#{company.id}_layout o_snail_mail {{'o_report_layout_background' if company.layout_background != 'Blank' else ''}}"
             t-attf-style="background-image: url({{ 'data:image/png;base64,%s' % company.layout_background_image.decode('utf-8') if company.layout_background_image and company.layout_background == 'Custom' else
                           '/base/static/img/demo_logo_report.png' if company.layout_background == 'Demo logo' else ''}});"
             t-att-data-oe-model="o and o._name"
             t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <h2 t-out="layout_document_title"/>
            <t t-out="0"/>
        </div>

        <div t-attf-class="footer o_abstract_footer o_company_#{company.id}_layout">
            <div class="row">
                <div class="col-4">
                    <span t-field="company.report_footer"/>
                </div>
                <div class="col-4">
                    <span t-if="company.is_company_details_empty" t-field="company.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                    <span t-else="" t-field="company.company_details"/>
                </div>
                <div class="col-3">
                    <div class="mt0 mb0 h5" t-if="company.report_header" t-field="company.report_header">Company tagline</div>
                </div>
                <div class="col-1">
                    <ul t-if="report_type == 'pdf'" class="list-inline pagenumber float-end text-center">
                        <li class="list-inline-item"><strong><span class="page"/></strong></li>
                    </ul>
                </div>
            </div>
        </div>
     </template>

     <template id="kits_abstract_report" inherit_id="web.styles_company_report">
        <xpath expr="//t[@t-elif]" position="before">
            <t t-elif="layout == 'kits_all_in_one_custom_layout.abstract_layout'">
                &amp;.o_abstract_footer {
                    border-top: 3px solid <t t-esc='secondary'/>;
                    h4 {
                        color: <t t-esc='secondary'/>;
                    }
                    .pagenumber {
                        border: 3px solid <t t-esc='primary'/>;
                        background-color: <t t-esc='secondary'/>;
                    }
                }
                &amp;.o_report_layout_abstract {
                    h1, h2, h3 {
                        color: <t t-esc='primary'/>;
                    }
                    strong {
                        color: <t t-esc='secondary'/>;
                    }
                    table {
                       thead {
                           color: <t t-esc='secondary'/>;
                           tr th {
                                border-top: 3px solid <t t-esc='secondary'/> !important;
                            }
                        }
                        tbody {
                            tr:last-child td {
                                border-bottom: 3px solid <t t-esc='secondary'/>;
                            }
                        }
                    }
                    #total, .totals_taxes_company_currency {
                        strong {
                            color: <t t-esc='secondary'/>;
                        }
                    }
                }
            </t>
        </xpath>
    </template>
</odoo>
