<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="kits_layout">
        <div t-attf-class="header o_company_#{company.id}_layout o_kits_header">
            <div class="row mb8">
                <div class="col-4 d-flex flex-column justify-content-between">
                    <div/>
                    <img t-if="company.logo" class="o_company_logo_big" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                    <div/>
                </div>
                <div class="col-8 text-start mb4">
                    <div name="company_address" class="float-end mb4">
                        <div class="h4">
                            <span t-if="company.report_header" t-field="company.report_header" class="o_company_tagline">Company tagline</span>
                        </div>
                        <ul class="list-unstyled" name="company_address_list">
                            <li t-if="company.is_company_details_empty"><span t-field="company.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'>
                                <div class="bg-light border-1 rounded h-100 d-flex flex-column align-items-center justify-content-center p-4 w-100 opacity-75 text-muted text-center">
                                    <strong>Company address block</strong>
                                    <div>Contains the company address.</div>
                                </div>
                            </span></li>
                            <li t-else="">
                                <span t-field="company.company_details">
                                    <div class="bg-light border-1 rounded h-100 d-flex flex-column align-items-center justify-content-center p-4 w-100 opacity-75 text-muted text-center">
                                        <strong>Company details block</strong>
                                        <div>Contains the company details.</div>
                                    </div>
                                </span>
                            </li>
                            <li t-if="not forced_vat"/>
                            <li t-else="">
                                <t t-esc="company.country_id.vat_label or 'Tax ID'">Tax ID</t>:
                                <span t-esc="forced_vat">US12345671</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_kits o_company_#{company.id}_layout o_snail_mail {{'o_report_layout_background' if company.layout_background != 'Blank' else ''}}"
             t-attf-style="background-image: url({{ 'data:image/png;base64,%s' % company.layout_background_image.decode('utf-8') if company.layout_background_image and company.layout_background == 'Custom' else
                           '/base/static/img/demo_logo_report.png' if company.layout_background == 'Demo logo' else ''}});"
             t-att-data-oe-model="o and o._name"
             t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <h2 t-out="layout_document_title"/>
            <t t-out="0"/>
        </div>

        <div t-attf-class="footer o_kits_footer o_company_#{company.id}_layout {{report_type != 'pdf' and 'mt-auto'}}">
            <div class="kits-footer-content row">
                <div class="col-12 text-center mt-2 mb-2">
                    <span t-esc="company.report_footer"/>
                </div>
            </div>
            <div class="col-12 text-center">
                <span t-if="report_type == 'pdf'" >Page <span class="page"/> / <span class="topage"/></span>
            </div>
        </div>

    </template>

    <template id="kits_custom_report" inherit_id="web.styles_company_report">
        <xpath expr="//t[@t-elif]" position="before">
            <t t-elif="layout == 'kits_all_in_one_custom_layout.kits_layout'">
                &amp;.o_report_layout_kits {
                    #total strong {
                        color: <t t-esc="secondary"/>;
                    }
                    .totals_taxes_company_currency strong{
                        color: <t t-esc="primary"/>;
                    }
                    #informations strong {
                        color: <t t-esc="secondary"/>;
                    }
                    h2 span {
                        color: <t t-esc="primary"/>;
                    }
                    table {
                        thead {
                            tr th {
                                color: <t t-esc="secondary"/>;
                                background-color: rgba(<t t-esc="secondary"/>, 0.1);
                            }
                        }
                        tbody tr td {
                            &amp;.o_line_section td {
                                    background-color: rgba(<t t-esc="primary"/>, 0.7);
                                }
                        }
                    }

                    #total .o_total td {
                        background-color: rgba(<t t-esc="secondary"/>, 0.1) !important;
                        color: <t t-esc="secondary"/> !important;

                        strong {
                            color: <t t-esc="secondary"/> !important;
                        }
                    }

                }
                &amp;.o_kits_header {
                    h4 {
                        color: <t t-esc="primary"/> !important;
                    }
                    .h4 {
                        color: <t t-esc="primary"/> !important;
                    }
                }
            </t>
        </xpath>
    </template>
</odoo>
