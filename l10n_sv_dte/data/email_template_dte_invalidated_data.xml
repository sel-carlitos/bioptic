<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="0">
    <record id="email_template_dte_invalidated" model="mail.template">
        <field name="name">INVALIDATED DTE</field>
        <field name="email_from">{{(user.email or '')}}</field>
        <field name="subject">INVALIDACION DE DOCUMENTO TRIBUTARIO ELECTRONICO</field>
        <field name="email_to">{{object.partner_id.email}}</field>
<!--        <field name="lang">{{object.partner_id.lang}}</field>-->
        <field name="model_id" ref="model_l10n_sv_dte_document"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html" type="html">
            <div>
                Dear,
                <br />
                <t t-if="object.partner_id">
                    <t t-out="object.partner_id.name or ''">Brandon Freeman</t> (<t t-out="object.partner_id.name or ''">Azure Interior</t>),
                </t>
                <br />
                I hereby inform you that your invoice
                <br />
                Issue on: <t t-out="object.date_issue or ''" />
                <br />
                Generation Code:
                <br />
                <t t-out="object.l10n_sv_generation_code" />
                <br />
                To view the cancelled document
                <br />
<!--                <a href="http://hola.ocm">Da click aca.</a>-->
                <a t-att-href="object.l10n_sv_electronic_stamp">Da click aca.</a>
            </div>
        </field>
    </record>
</odoo>
