<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">view.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <form>
                <!-- Invisible fields -->
                <field name="l10n_sv_is_exportation" invisible="1"/>
                <field name="l10n_sv_fiscal_journal" invisible="1"/>
                <field name="l10n_sv_available_voucher_type_ids" invisible="1"/>
            </form>
            <xpath expr="//header" position="after">
                <div class="alert alert-info mb-0" role="alert"
                     invisible="l10n_sv_dte_send_state not in ['to_send', 'signed_pending'] or state != 'posted'">
                    Este servicio de facturación electrónica procesará la factura asincronicamente
                    <button class="btn btn-link p-0" type="object" name="action_send_to_hacienda"
                            style="padding: 0; vertical-align: baseline;">Enviar a Hacienda ahora</button>.
                </div>
            </xpath>
            <button name="action_post" position="after">
                <button name="l10n_sv_action_annul_dte_wizard" type="object" string="Annul DTE" class="btn-danger" data-hotkey="q"
                invisible="move_type == 'entry' or not l10n_sv_fiscal_journal or l10n_sv_dte_send_state != 'delivered_accepted'"/>
            </button>
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="l10n_sv_dte_situation"
                       readonly="1"
                       invisible="move_type == 'entry' or not l10n_sv_fiscal_journal"/>
                <field name="l10n_sv_terminal_id"
                       invisible="move_type == 'entry' or not l10n_sv_fiscal_journal"
                       domain="[('company_id', '=', company_id), ('state', '=', 'active')]"
                       readonly="state != 'draft'"/>
            </xpath>
            <xpath expr="//group[@id='header_right_group']" position="inside">
                <field name="l10n_sv_voucher_type_id"
                       invisible="move_type == 'entry' or country_code != 'SV'"
                       required="l10n_sv_fiscal_journal"
                       readonly="posted_before"
                       options="{'no_open': True, 'no_create': True}"
                       domain="[('id', 'in', l10n_sv_available_voucher_type_ids)]"/>
                <field name="l10_sv_dte_id" invisible="not l10_sv_dte_id or not l10n_sv_fiscal_journal"/>
                <field name="l10n_sv_dte_send_state" invisible="not l10_sv_dte_id or not l10n_sv_fiscal_journal"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Facturación Electrónica" id="page_fe"
                      invisible="move_type == 'entry' or not l10n_sv_fiscal_journal">
                    <group invisible="not l10n_sv_fiscal_journal">
                        <group invisible="not l10_sv_dte_id">
                            <field name="l10n_sv_qr_code" nolabel="1" widget="image" style="width: 120px; height: 120px;"/>
                        </group>
                        <group invisible="not l10_sv_dte_id">
                            <field name="l10n_sv_electronic_stamp" widget="CopyClipboardChar"/>
                            <field name="l10n_sv_generation_code"/>
                        </group>
                    </group>
                </page>
                <page string="Documentos Relacionados FE" invisible="not (move_type in ['out_refund', 'out_refund'] or debit_origin_id) or not l10n_sv_fiscal_journal">
                    <group>
                        <group>
                            <field name="l10n_sv_generation_type_ref"
                                   readonly="l10_sv_dte_id != False"/>
                        </group>
                        <group>
                            <field name="l10n_sv_generation_code_ref"
                                   readonly="l10_sv_dte_id != False"/>
                            <field name="l10n_sv_date_issue_ref"
                                   readonly="l10_sv_dte_id != False"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//page[@id='other_tab']/group/group[@name='sale_info_group']" position="after">
                <group string="Exportation Invoice" invisible="not l10n_sv_is_exportation">
                    <field name="l10n_sv_incoterm"/>
                    <field name="l10n_sv_type_item_to_import"/>
                    <field name="l10n_sv_tax_precinct"/>
                    <field name="l10n_sv_regime"/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="view_move_tree_inherit" model="ir.ui.view">
        <field name="name">account.invoice.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="l10n_sv_document_number" optional="show"/>
            </field>
            <field name="status_in_payment" position="before">
                <field name="l10n_sv_dte_send_state" widget="badge" optional="show"
                       decoration-success="l10n_sv_dte_send_state == 'delivered_accepted'"
                       decoration-danger="l10n_sv_dte_send_state == 'delivered_refused'"
                       decoration-info="l10n_sv_dte_send_state == 'invalidated'"/>
            </field>
        </field>
    </record>
    <record id="action_invoice_exportation" model="ir.actions.act_window">
        <field name="name">Exportation Invoice</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="account.view_invoice_tree"/>
        <field name="domain">[('l10n_sv_is_exportation', '=', True)]</field>
        <field name="context">{'default_move_type': 'out_invoice', 'default_l10n_sv_is_exportation': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una Factura de Exportación
            </p>
        </field>
    </record>
    <menuitem id="menu_invoice_exportation" name="Exportation Invoice" action="action_invoice_exportation"
              parent="account.menu_finance_receivables" sequence="3"/>

    <record model="ir.actions.server" id="action_l10n_sv_delivery_note_wizard">
        <field name="name">Delivery Note</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="groups_id" eval="[Command.link(ref('account.group_account_invoice'))]"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="state">code</field>
        <field name="binding_view_types">form</field>
        <field name="code">
if records:
    action = records.l10n_sv_action_delivery_note()
        </field>
    </record>
</odoo>
