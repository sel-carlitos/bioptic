<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_sv_document_tree_view" model="ir.ui.view">
        <field name="name">l10n_sv_dte.document.tree.view</field>
        <field name="model">l10n_sv.dte.document</field>
        <field name="arch" type="xml">
            <list create="0" delete="0" duplicate="0">
                <field name="name"/>
                <field name="l10n_sv_generation_code"/>
                <field name="create_date"/>
                <field name="l10n_sv_voucher_type_id"/>
                <field name="partner_id"/>
                <field name="date_issue"/>
                <field name="l10n_sv_state_mail" widget="badge" decoration-success="l10n_sv_state_mail == 'sent'"/>
                <field name="l10n_sv_dte_send_state" widget="badge"
                       decoration-success="l10n_sv_dte_send_state == 'delivered_accepted'"
                       decoration-danger="l10n_sv_dte_send_state == 'delivered_refused'"
                       decoration-info="l10n_sv_dte_send_state == 'invalidated'"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </list>
        </field>
    </record>
    <record id="l10n_sv_document_form_view" model="ir.ui.view">
        <field name="name">ecf.document.form.view</field>
        <field name="model">l10n_sv.dte.document</field>
        <field name="arch" type="xml">
            <form string="Electronic Document" edit="0" create="0" duplicate="false" delete="0">
                <header>
                    <button name="action_gen_json" type="object" string="Gen JSON" class="oe_highlight"
                            invisible="json_file != False"/>
                    <button name="action_send_to_hacienda" type="object" string="Send Hacienda" class="oe_highlight"
                            invisible="l10n_sv_dte_send_state in ['delivered_accepted', 'delivered_refused']"/>
<!--                    <button name="action_request_state_to_hacienda" type="object" string="Request State Hacienda"-->
<!--                            invisible="l10n_sv_dte_send_state in ['delivered_accepted', 'delivered_refused', 'signed_pending']"-->
<!--                            class="oe_highlight"/>-->
                    <field name="l10n_sv_dte_send_state" widget="statusbar" statusbar_visible="signed_pending,delivered_accepted,delivered_refused,invalidated"/>
                </header>
                <sheet string="Electronic Documents">
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="l10n_sv_generation_code"/>
                            <field name="invoice_id" invisible="not invoice_id"/>
                            <field name="l10n_sv_voucher_type_id"/>
                            <field name="partner_id"/>
                            <field name="json_signed" invisible="1"/>
                            <field name="json_andte_signed" invisible="1"/>
                        </group>
                        <group>
                            <field name="json_file" readonly="1" filename="json_file_name"/>
                            <field name="json_file_name" readonly="1" invisible="1"/>
                            <field name="l10n_sv_receipt_stamp" readonly="1" invisible="not l10n_sv_receipt_stamp"/>
                        </group>
                    </group>
                    <group string="Annulation DTE" invisible="not jon_andte_file">
                        <group invisible="not jon_andte_file">
                            <field name="l10n_sv_cancellation_type"/>
                            <field name="l10n_sv_cancellation_reason"/>
                        </group>
                        <group invisible="not jon_andte_file">
                            <field name="l10n_sv_annulation_generation_code"/>
                            <field name="jon_andte_file" readonly="1"
                                   invisible="not jon_andte_file"
                                   filename="json_andte_file_name"/>
                            <field name="json_andte_file_name" readonly="1" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mensaje de Hacienda" invisible="not json_mr_file">
                            <button name="action_consultatrackids" type="object" string="Request State"
                                    class="oe_highlight mb-2"
                                    invisible="not json_file"/>
                            <group>
                                <group>
                                    <field name="json_mr_file" colspan="4" readonly="1" filename="json_mr_file_name"/>
                                    <field name="json_mr_file_name" readonly="1" invisible="1"/>
                                </group>
                                <field name="message_detail" readonly="1"/>
                                <field name="response_status_code" groups="base.group_no_one"/>
                            </group>
                            <separator string="Annulation Message Details" invisible="not jon_andte_file"/>
                            <field name="andte_dgii_message_ids" invisible="not jon_andte_file" readonly="1" nolabel="1">
                                <list>
                                    <field name="version"/>
                                    <field name="ambiente"/>
                                    <field name="versionApp"/>
                                    <field name="estado"/>
                                    <field name="fhProcesamiento"/>
                                    <field name="descripcionMsg"/>
                                    <field name="observaciones"/>
                                </list>
                            </field>
                        </page>
                        <page string="QR" name="qr_code">
                            <group>
                                <group>
                                    <field name="l10n_sv_qr_code" widget="image" invisible="not l10n_sv_qr_code" nolabel="1"/>
                                </group>
                                <group>
                                    <field name="l10n_sv_electronic_stamp" invisible="not l10n_sv_electronic_stamp"
                                           widget="CopyClipboardChar"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_attachment="True"/>
            </form>
        </field>
    </record>
    <record id="l10n_sv_document_view_search" model="ir.ui.view">
        <field name="name">l10n_sv.document.view.search</field>
        <field name="model">l10n_sv.dte.document</field>
        <field name="arch" type="xml">
            <search string="Document">
                <field name="name"/>
                <field name="l10n_sv_generation_code"/>
                <field name="partner_id"/>
                <filter string="Create Date" name="create_date" date="create_date"/>
                <group expand="0" string="Group By">
                    <filter string="Voucher Type" name="filter_l10n_sv_voucher_type_id" context="{'group_by': 'l10n_sv_voucher_type_id'}"/>
                    <filter string="State" name="filter_l10n_sv_dte_send_state" context="{'group_by': 'l10n_sv_dte_send_state'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_ecf_document_action" model="ir.actions.act_window">
        <field name="name">Electronic Documents</field>
        <field name="res_model">l10n_sv.dte.document</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Haga clic para agregar un documento.
            </p>
            <p>
                Una documento es un registro de la compañia a la DGII que genera la facturacion electrónica.
            </p>
        </field>
    </record>
    <menuitem id="ecf_documents_root" name="Hacienda" groups="account.group_account_manager" web_icon="l10n_sv_dte,static/img/logo-mh.png">
        <menuitem id="ecf_documents_main" name="Electronic Vouchers">
            <menuitem id="ecf_documents_menu"
                      action="action_ecf_document_action"
                      sequence="1"/>
        </menuitem>
        <menuitem id="ecf_setting_main" name="Configuration"/>
    </menuitem>
</odoo>
