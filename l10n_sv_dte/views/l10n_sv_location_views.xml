<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_location_form" model="ir.ui.view">
        <field name="name">ce.location.form</field>
        <field name="model">l10n_sv.location</field>
        <field name="arch" type="xml">
            <form string="Sucursal">
                <header>
                    <button name="action_confirm" string="Confirm" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state in ('cancelled', 'draft')"/>
                    <field name="state" widget="statusbar" statusbar_visible="active"/>
                </header>
                <sheet string="Location">
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                name="action_view_sequence"
                                icon="fa-arrow-right" type="object"
                                groups="base.group_system"
                                invisible="state == 'draft'">
                            <span class="o_stat_text">Sequences</span>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="code"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="sequence_fe"/>
                            <field name="sequence_ccfe"/>
                            <field name="sequence_nre"/>
                            <field name="sequence_nce"/>
                            <field name="sequence_nde"/>
                            <field name="sequence_fex"/>
                            <field name="sequence_fsee"/>
                            <field name="sequence_cde"/>
                            <field name="sequence_cre"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_location_tree" model="ir.ui.view">
        <field name="name">ce.location.form</field>
        <field name="model">l10n_sv.location</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state" decoration-success="state == 'active'" widget="badge"
                                    decoration-danger="state == 'cancelled'"
                                    decoration-info="state == 'draft'"/>
            </list>
        </field>
    </record>
    <record id="action_location_form" model="ir.actions.act_window">
        <field name="name">Sucursal</field>
        <field name="res_model">l10n_sv.location</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,form</field>
<!--        <field name="view_id" ref="view_location_tree"/>-->
    </record>
    <menuitem id="menu_sucursal" action="action_location_form" parent="ecf_setting_main"/>
</odoo>
