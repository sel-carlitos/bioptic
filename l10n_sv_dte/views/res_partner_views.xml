<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_partner_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <form>
                <!-- Invisible fields -->
                <field name="l10n_sv_identification_code" invisible="1"/>
            </form>
            <xpath expr="//div[hasclass('oe_title')]" position="after">
                <div>
                    <field name="l10n_sv_identification_id"
                        placeholder="Identification Type"
                        invisible="'SV' not in fiscal_country_codes"
                        domain="[('id', 'in', l10n_sv_available_identification_ids)]"
                        options="{'no_open': 1,'no_create': 1, 'no_create_edit': 1}"/>
                    <field name="nit" placeholder="NIT"
                          invisible="l10n_sv_identification_code != '36' or 'SV' not in fiscal_country_codes"/>
                    <field name="dui" placeholder="DUI"
                          invisible="l10n_sv_identification_code != '13' or 'SV' not in fiscal_country_codes"/>
                </div>
                <field name="l10n_sv_commercial_name" placeholder="Commercial Name"
                      invisible="'SV' not in fiscal_country_codes"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="placeholder">RNC</attribute>
            </xpath>
            <xpath expr="//form/sheet/notebook" position="before">
                <group invisible="'SV' not in fiscal_country_codes or company_type == 'person'">
                    <group>
                        <separator colspan="7"/>
                        <field name="l10n_sv_activity_id"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
