<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_cr_invoice_pos_recreate_wizard_form" model="ir.ui.view">
        <field name="name">l10n_cr_invoice_pos.recreate.wizard.form</field>
        <field name="model">l10n_sv.delivery.note.wizard</field>
        <field name="groups_id" eval="[Command.link(ref('account.group_account_invoice'))]"/>
        <field name="arch" type="xml">
            <form>
                <!-- Invisible fields -->
                <field name="move_ids" invisible="1"/>
                <field name="l10n_sv_voucher_type_id" invisible="1"/>
                <field name="company_id" invisible="1"/>
                <field name="journal_id" invisible="1"/>
                <footer>
                    <button string='Reverse' name="refund_moves" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_view_account_move_debit11" model="ir.actions.act_window">
        <field name="name">Create Delivery Note</field>
        <field name="res_model">l10n_sv.delivery.note.wizard</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="l10n_cr_invoice_pos_recreate_wizard_form"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move" />
        <field name="binding_view_types">list</field>
    </record>
</odoo>
