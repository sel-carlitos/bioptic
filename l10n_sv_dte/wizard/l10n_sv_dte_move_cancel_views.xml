<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_sv_dte_move_cancel_view" model="ir.ui.view">
        <field name="name">account.move.cancel.form</field>
        <field name="model">l10n_sv_dte.move.cancel</field>
        <field name="arch" type="xml">
            <form string="Cancel Selected Invoice">
                <!-- Invisible fields -->
                <field name="move_ids" invisible="1"/>

                <group>
                    <field name="l10n_sv_cancellation_type"/>
                    <field name="l10n_sv_responsible_annulation_id"/>
                </group>
                <field name="reason" placeholder="Reason"/>
                <footer>
                    <button string="Invalidate Invoice" name="move_cancel"
                            type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_l10n_sv_dte_move_cancel" model="ir.actions.act_window">
        <field name="name">Cancel Selected Invoice</field>
        <field name="res_model">l10n_sv_dte.move.cancel</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="l10n_sv_dte_move_cancel_view"/>
        <field name="target">new</field>
    </record>
</odoo>
