<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="l10n_do_pos.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt')]" position="inside">
            <div>
                <div t-if="props.data.QR_code" style="text-align: center; padding:0px; margin:0px;">
                    <img class="pos-receipt-logo" t-att-src="'data:image/png;base64,' + props.data.QR_code"/>
                </div>
            </div>
        </xpath>
    </t>
</templates>
