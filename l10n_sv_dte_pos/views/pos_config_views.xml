<odoo>
    <record id="pos_config_view_form_inherit" model="ir.ui.view">
        <field name="name">pos_config_view_form_inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='other_devices']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="fe_extras_terminal">
                    <div class="content-group mt16">
                        <div invisible="not l10n_sv_fiscal_journal">
                            <label string="Terminal" for="l10n_sv_terminal_id" class="col-lg-3 o_light_label"/>
                            <field name="l10n_sv_terminal_id" required="l10n_sv_fiscal_journal"
                                   readonly="has_active_session"
                                   domain="[('company_id', '=', company_id), ('state', '=', 'active')]"/>
                            <field name="company_id" invisible="1"/>
                            <field name="l10n_sv_fiscal_journal" invisible="1"/>
                        </div>
                    </div>
                </div>
                <setting id="only_invoice">
                    <field name="only_invoice" readonly="has_active_session"/>
                    <div class="content-group">
                        <div class="text-muted">
                            Forza a crear facturas al confirmar el pedido,
                            considere deshabilitar esta opcion en cualquier otro caso.
                        </div>
                        <div class="content-group mt16" invisible="not only_invoice">
							<div class="row mt16">
								<label string="Default customer" for="default_partner_id" class="col-lg-3 o_light_label"/>
								<field name="default_partner_id" readonly="has_active_session"/>
							</div>
						</div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
