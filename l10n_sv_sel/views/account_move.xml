<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="account_move_inherit_l10n_sv_sel" model="ir.ui.view">
    <field name="name">account.move.inherit.l10n.sv.sel</field>
    <field name="model">account.move.line</field>
    <field name="inherit_id" ref="account.view_move_line_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='tax_line_id']" position="after">
        <field name="tax_totals" invisible="1" />
      </xpath>
    </field>
  </record>

  <record id="doc_rel_view_move_form_inherit" model="ir.ui.view">
    <field name="name">account.invoice.form.inherit.l10n.sv.sel</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="l10n_sv_dte.view_move_form_inherit" />
    <field name="arch" type="xml">
      <field name="l10n_sv_generation_type_ref" position="after">
        <field name="dte_reference_doc" invisible="not reversed_entry_id" />
        <field name="voucher_type_id_ref" invisible="not reversed_entry_id" />
        <field name="dte_reference_doc_debit_note" invisible="not debit_origin_id" />
        <field name="voucher_type_id_ref_debit_note" invisible="not debit_origin_id" />
      </field>
      <xpath expr="//field[@name='l10n_sv_generation_type_ref']" position="attributes">
        <attribute name="readonly">1</attribute>
      </xpath>

      <xpath expr="//field[@name='l10n_sv_generation_code_ref']" position="attributes">
        <attribute name="readonly">1</attribute>
      </xpath>

      <xpath expr="//field[@name='l10n_sv_date_issue_ref']" position="attributes">
        <attribute name="readonly">1</attribute>
      </xpath>
    </field>
  </record>

</odoo>
