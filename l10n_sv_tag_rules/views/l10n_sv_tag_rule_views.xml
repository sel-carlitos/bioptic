<odoo>
  <record id="view_l10n_sv_tag_rule_list" model="ir.ui.view">
    <field name="name">l10n.sv.tag.rule.list</field>
    <field name="model">l10n_sv.tag.rule</field>
    <field name="arch" type="xml">
      <list>
        <field name="sequence" />
        <field name="name" />
        <field name="company_id" />
        <field name="active" />
      </list>
    </field>
  </record>

  <record id="view_l10n_sv_tag_rule_form" model="ir.ui.view">
    <field name="name">l10n.sv.tag.rule.form</field>
    <field name="model">l10n_sv.tag.rule</field>
    <field name="arch" type="xml">
      <form string="Regla l10n_sv">
        <sheet>
          <group>
            <field name="name" />
            <field name="sequence" />
            <field name="active" />
            <field name="company_id" />
            <field name="apply_on_post" />
            <field name="retroactive" />
            <field name="apply_mode" />
          </group>
          <group>
            <field name="tag_ids" widget="many2many_tags" />
            <label for="filter_domain" string="Dominio (ORM) - target: account.move.line" />
            <field name="filter_domain" widget="domain" options="{'model':'account.move.line'}"
              placeholder="Ej: [('move_id.move_type','=','out_invoice'),('move_id.partner_id.country_id.code','=','SV')]" />
            <field name="note" />
          </group>
          <button name="%(action_l10n_sv_apply_rule_wizard)d" type="action"
            string="Aplicar a movimientos existentes..." class="btn-secondary" />
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_l10n_sv_tag_rule" model="ir.actions.act_window">
    <field name="name">Reglas etiquetas l10n_sv</field>
    <field name="res_model">l10n_sv.tag.rule</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_l10n_sv_tag_rules" name="Reglas etiquetas l10n_sv"
    parent="account.menu_finance_configuration" />
  <menuitem id="menu_l10n_sv_tag_rules_action" name="Reglas" parent="menu_l10n_sv_tag_rules"
    action="action_l10n_sv_tag_rule" />
</odoo>
