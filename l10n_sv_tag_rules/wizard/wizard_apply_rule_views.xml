<odoo>
  <record id="view_l10n_sv_apply_rule_wizard_form" model="ir.ui.view">
    <field name="name">l10n.sv.apply.rule.wizard.form</field>
    <field name="model">l10n_sv.apply.rule.wizard</field>
    <field name="arch" type="xml">
      <form string="Aplicar regla l10n_sv">
        <group>
          <field name="rule_id" />
          <field name="company_id" />
          <field name="date_from" />
          <field name="date_to" />
          <field name="journal_ids" />
          <field name="move_state" />
        </group>
        <footer>
          <button string="Aplicar" type="object" name="action_apply" class="btn-primary" />
          <button string="Cancelar" class="btn-default" special="cancel" />
        </footer>
      </form>
    </field>
  </record>

  <record id="action_l10n_sv_apply_rule_wizard" model="ir.actions.act_window">
    <field name="name">Aplicar regla l10n_sv</field>
    <field name="res_model">l10n_sv.apply.rule.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>
