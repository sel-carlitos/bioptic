<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l4l_action_report_product_catalogue" model="ir.actions.report">
        <field name="name">Product Catalogue</field>
        <field name="model">generate.leap.product.catalogue</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l4l_product_catalogue.l4l_report_product_catalogue</field>
        <field name="report_file">l4l_product_catalogue.l4l_report_product_catalogue</field>
    </record>

    <template id="l4l_report_product_catalogue">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div style="padding: 5px; margin: 20px;">
                            <h1 style="text-align: center; font-size: 28px; padding:10px; margin:20px;">
                                <t t-esc="doc.name"/>
                            </h1>
                        </div>
                        <t t-set="all_data" t-value="doc.get_data()"/>
                        <t t-if="doc.catalogue_style == 'style_1'" t-call="l4l_product_catalogue.l4l_report_product_catalogue_style_1"/>
                        <t t-if="doc.catalogue_style == 'style_2'" t-call="l4l_product_catalogue.l4l_report_product_catalogue_style_2"/>
                        <t t-if="doc.catalogue_style == 'style_3'" t-call="l4l_product_catalogue.l4l_report_product_catalogue_style_3"/>
                        <t t-if="doc.catalogue_style == 'style_4'" t-call="l4l_product_catalogue.l4l_report_product_catalogue_style_4"/>
                        <t t-if="doc.catalogue_style == 'style_5'" t-call="l4l_product_catalogue.l4l_report_product_catalogue_style_5"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
