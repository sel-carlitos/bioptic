<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data noupdate="1">
        <record id="l4l_category_product_catalogue" model="ir.module.category">
            <field name="name">Product Catalogue</field>
            <field name="description">Category for Product Catalogue</field>
        </record>

        <record id="l4l_group_product_catalogue_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="l4l_category_product_catalogue"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="l4l_sale_group_product_catalogue_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="l4l_category_product_catalogue"/>
            <field name="implied_ids" eval="[(4, ref('l4l_group_product_catalogue_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/> <!-- Give Access to Admin By Default from Code  -->
        </record>
    </data>
</odoo>
