<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="l4l_view_product_catalogue_form" model="ir.ui.view">
        <field name="name">l4l.view.product.catalogue.form</field>
        <field name="model">leap.product.catalogue</field>
        <field name="arch" type="xml">
            <form string="Product Catalogue" create="0" edit="0" delete="1" duplicate="0">
                <header>
                	<button name="action_product_catalogue_send" string="Send by Email" class="oe_highlight" icon="fa-solid fa-envelope" type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_product_catalogue" type="object" class="oe_stat_button" icon="fa-file" title="Product Catalogue">
                            <field name="message_attachment_count" widget="statinfo" string="Product Catalogue"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="create_date" string="Date"/>
                        </group>
                        <group>
                            <field name="category_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="l4l_view_product_catalogue_tree" model="ir.ui.view">
        <field name="name">l4l.view.product.catalogue.tree</field>
        <field name="model">leap.product.catalogue</field>
        <field name="arch" type="xml">
            <list string="Log Data" create="0" edit="0" delete="1" duplicate="0">
                <field name="name"/>
                <field name="create_date" string="Date"/>
                <field name="company_id" optional="hide"/>
                <button name="action_product_catalogue_send" type="object" class="oe_stat_button" icon="fa-solid fa-envelope" string="Send by Email"/>
            </list>
        </field>
    </record>

    <record id="l4l_action_product_catalogue_user" model="ir.actions.act_window">
        <field name="name">Product Catalogue</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">leap.product.catalogue</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="l4l_sub_menu_product_catalogue_user"
              name="Product Catalogue"
              sequence="0"
              parent="l4l_product_catalogue.l4l_main_menu_product_catalogue"
              action="l4l_action_product_catalogue_user"/>
</odoo>
